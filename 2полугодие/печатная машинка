п=['****', #создание списка, содержащего изображение буквы п
   '*  *',
   '*  *',
   '*  *']
р=['****', #создание списка, содержащего изображение буквы п
   '*  *',
   '****',
   '*   ']
abc=[п,р] #создание списка,содержащего два предыдущих списка
alf=['п','р'] #создание списка,содержащего символы п и р 

a='прпрррппп' #строка текста, которую нужно вывести на печать

ch=[alf.index(z) for z in a] #каждой букве присваивается численное значение

for i in range (len(abc[0])): #цикл повторяется столько раз, сколько элементав в списке abc
    for y in range(len(ch)): #цикл повторяется столько раз, сколько элементов в списке ch                          
        print(abc[ch[y]][i],end=' ')# вывод буквы на печать
    print() #печать пустой строки (пробела)
